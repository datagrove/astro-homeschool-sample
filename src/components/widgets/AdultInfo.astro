    <label for="timezones">Timezone</label><br>
    <select id="timezones" class="-ml-0 border border-dgSecondary border-1 rounded mb-2" name="timezones">
        <option selected hidden disabled>Select</option>
        <option value="-10:00">Hawaii (GMT -10:00)</option>
        <option value="-09:00">Alaska (GMT -9:00)</option>
        <option value="-08:00">Pacific Time (GMT -8:00)</option>
