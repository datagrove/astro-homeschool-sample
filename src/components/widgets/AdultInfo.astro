    <label for="lname">Primary Contact Last Name</label><br>    
    <input type="text" id="lname" name="lname" required class="form-input"><br>

    <label for="fname">Primary Contact First Name</label><br>
    <input type="text" id="fname" name="fname" required class="form-input"><br>

    <label for="email">Primary Contact Email</label><br>
    <input type="email" id="email" name="email" required class="form-input"><br>

    <label for="username">Username</label><br>
    <input type="text" id="username" name="username" required class="form-input"><br>

    <label for="password">Password</label><br>
